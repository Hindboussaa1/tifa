<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/dashboardCardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="12dp"
        android:elevation="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/main_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/itemTextView">

        <ImageView
            android:id="@+id/iconImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_set_meal_24"
            android:layout_gravity="center"
            android:contentDescription="Dashboard Icon"
            android:layout_centerInParent="true"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/itemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Title"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/royal_blue"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/open_sans"
        app:layout_constraintTop_toBottomOf="@+id/dashboardCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
