<!-- res/drawable/custom_google_sign_in_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5" /> <!-- Background color when pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4285F4" /> <!-- Default background color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
